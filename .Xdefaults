*foreground:      #c0c0c0
*foreground_bold: #a8a19f
*cursor:          #a8a19f
*background:      #1b1918

URxvt.depth:            32
URxvt.fading:           0
URxvt.loginShell:       true
URxvt.saveLines:        10000
URxvt.internalBorder:   2
URxvt.lineSpace:        0
URxvt.letterSpace:      0

! Appearance
URxvt.font:             xft:DejaVuSansMono Nerd Font:pixelsize=13
URxvt.boldFont:         xft:DejaVuSansMono Nerd Font:bold:pixelsize=13
URxvt.italicFont:       xft:DejaVuSansMono Nerd Font:italic:pixelsize=13
URxvt.boldItalicFont:   xft:DejaVuSansMono Nerd Font:bold:italic:pixelsize=13
URxvt.iconFile:         /home/michiel/dotfiles/Icon/terminal.svg

URxvt.background:       [85]#000000
URxvt.borderColor:      [85]#000000
URxvt.scrollBar:        false
URxvt.cursorBlink:      false
URxvt.cursorColor:      #af5f00
URxvt.cursorUnderline:  false

!URxvt.geometry:         166x56
!URxvt*backgroundPixmap: /home/michiel/dotfiles/Background/dwm-mypattern.png;style=tiled
! Leave transparency to compton
!URxvt*.transparent:      true
!URxvt*.shading:          10
!URxvt*.blurRadius:       21
! Behavior
URxvt*scrollTtyOutput:   false
URxvt*scrollTtyKeypress: true

!! Keybinding
URxvt.keysym.C-Up:       perl:font-size:increase
URxvt.keysym.C-Down:     perl:font-size:decrease
URxvt.keysym.C-S-Up:     perl:font-size:incglobal
URxvt.keysym.C-S-Down:   perl:font-size:decglobal
!Home and End keys to jump to the beginning and end of lines
URxvt*keysym.Home:       \033[1~
URxvt*keysym.End:        \033[4~

!! Disable the stupid ctrl+shift 'feature'
URxvt.iso14755:          false
URxvt.iso14755_52:       false

! Misc
! delimiters for double-click selection
URxvt*cutchars:          BACKSLASH '"'&()*,;<=>?@[]^{|}
URxvt*urgentOnBell:      true

! Xft settings
Xft.autohint:   0
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault

!! Extensions
URxvt.perl-ext-common: default,matcher,url-select,keyboard-select,font-size
URxvt.colorUL:         #4682B4
!! url-select
URxvt.keysym.M-u:      perl:url-select:select_next
URxvt.url-select.launcher: chromium
URxvt.url-select.underline: true
!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!! Matcher
URxvt.url-launcher:   chromium
URxvt.matcher.button: 1

rofi.color-enabled: true
rofi.color-window:  #000, #000, #000
rofi.color-normal:  #111, #819396, #222, #008ed4, #ffffff
rofi.color-active:  #002b37, #008ed4, #003643, #008ed4, #66c6ff
rofi.color-urgent:  #002b37, #da4281, #003643, #008ed4, #890661

rofi.fake-transparency: true
rofi.lines:             3
rofi.bw:                0
rofi.opacity:           "20"
rofi.hide-scrollbar:    true
rofi.width:             30

